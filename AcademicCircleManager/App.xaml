<Application x:Class="AcademicCircleManagerApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AcademicCircleManagerApp"
             xmlns:views="clr-namespace:AcademicCircleManagerApp.Views"
             xmlns:viewmodels="clr-namespace:AcademicCircleManagerApp.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:MemberEditorFormVM}">
            <views:AddEditMemberForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CircleFormVM}">
            <views:CircleForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MemberListFormVM}">
            <views:MemberListForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:FacultyFormVM}">
            <views:FacultyForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WelcomeFormVM}">
            <views:WelcomeForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MemberSelectFormVM}">
            <views:ChooseMembersForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ManagerFormVM}">
            <views:SpecialistForm/>
        </DataTemplate>
    </Application.Resources>
</Application>
